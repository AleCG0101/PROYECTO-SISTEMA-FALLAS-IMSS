@model Sistema_Fallas_IMSS.ViewModels.VM_Hospitales
@{
    Layout = null;
}
@Html.HiddenFor(model => model.Id)
@Html.HiddenFor(model => model.Mensaje, new {@id = "mdlHospital_Mensaje"})
<div class="container-fluid">
    <div class="row">
        <div class="col-sm-12 col-md-12 col-lg-12">
            <label>Nombre:</label>
            @Html.TextBoxFor(model => model.Nombre, "", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Nombre, null, new { @class = "text-danger" })
        </div>
    </div>
    <div class="row">
        <div class="col-sm-4 col-md-4 col-lg-4">
            <label>Director:</label>
            @Html.TextBoxFor(model => model.Director, "", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Director, null, new { @class = "text-danger" })
        </div>
