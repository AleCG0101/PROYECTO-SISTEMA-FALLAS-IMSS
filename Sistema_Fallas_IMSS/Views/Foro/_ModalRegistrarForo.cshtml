@model Sistema_Fallas_IMSS.ViewModels.VM_Foro
@{
    ViewBag.Title = "_ModalRegistrarForo";
    Layout = null;
}

@Html.HiddenFor(model => model.Id_foro)
@Html.HiddenFor(model => model.Mensaje)
<div class="container-fluid">
    <div class="row">
        <div class="col-sm-12 col-md-12 col-lg-12">
            <label>Titulo:</label>
            @Html.TextBoxFor(model => model.Titutlo, "", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Titutlo, null, new { @class = "text-danger" })
        </div>
        <div class="col-sm-12 col-md-12 col-lg-12">
            <label>Problema:</label>
            @Html.TextAreaFor(model => model.Problema, new { @class = "form-control", @rows = 5, @style = "resize: vertical;" })
            @Html.ValidationMessageFor(model => model.Problema, null, new { @class = "text-danger" })
        </div>
        <div class="col-sm-12 col-md-12 col-lg-12">
            <label>Solucion:</label>
            @Html.TextAreaFor(model => model.Solucion, new { @class = "form-control", @rows = 5, @style = "resize: vertical;" })
            @Html.ValidationMessageFor(model => model.Solucion, null, new { @class = "text-danger" })
        </div>
        <div class="col-sm-6 col-md-6 col-lg-6">
            <label>Autor:</label>
            @Html.TextBoxFor(model => model.Autor, "", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Autor, null, new { @class = "text-danger" })
        </div>
        <div class="col-sm-6 col-md-6 col-lg-6">
            <label>Correo:</label>
            @Html.TextBoxFor(model => model.Correo, "", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Correo, null, new { @class = "text-danger" })
        </div>
    </div>
</div>

